<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/LightGray">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/topTv2"
        android:id="@+id/topTv1"
        android:text="@string/countryName"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:textAppearance="?android:attr/textAppearanceLarge">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topTv1"
        app:layout_constraintLeft_toLeftOf="@id/topTv1"
        app:layout_constraintRight_toRightOf="@id/topTv1"
        android:id="@+id/topTv2"
        android:text="@string/Link"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:textAppearance="?android:attr/textAppearanceMedium">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>